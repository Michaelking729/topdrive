// =======================
// Datasource (Render Postgres)
// =======================
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =======================
// Prisma Client
// =======================
generator client {
  provider = "prisma-client-js"
}

// =======================
// Ride Status Lifecycle
// =======================
// =======================
// User Roles
// =======================
enum UserRole {
  CLIENT
  DRIVER
  ADMIN
}

// =======================
// Ride Status Lifecycle
// =======================
enum RideStatus {
  REQUESTED     // Rider created request
  ACCEPTED      // Driver accepted
  ARRIVING      // Driver on the way
  IN_PROGRESS   // Trip started
  COMPLETED     // Trip finished
  CANCELLED     // Cancelled by rider or driver
}

// =======================
// Ride Model
// =======================
model Ride {
  id           String     @id @default(cuid())

  // Ride details
  pickup       String
  destination  String
  city         String
  estimate     Float
  offeredPrice Float?

  // Status & driver
  status       RideStatus @default(REQUESTED)
  driverName   String?

  // ðŸ”œ Location (for maps â€“ safe to keep null for now)
  driverLat    Float?
  driverLng    Float?
  driverUpdatedAt DateTime?

  // Timestamps
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

// =======================
// User Model
// =======================
model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  role         UserRole @default(CLIENT)

  // Profiles
  clientProfile  ClientProfile?
  driverProfile  DriverProfile?

  // Timestamps
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// =======================
// Client Profile
// =======================
model ClientProfile {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  rating    Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// =======================
// Driver Profile
// =======================
model DriverProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  isVerified  Boolean  @default(false)
  rating      Float?
  vehicle     String?
  plate       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Persisted driver locations for history
model DriverLocation {
  id        String   @id @default(cuid())
  driverId  String
  lat       Float
  lng       Float
  ts        DateTime @default(now())

  @@index([driverId, ts])
}

// Notifications queued for drivers when offline
model DriverNotification {
  id        String   @id @default(cuid())
  driverId  String
  rideId    String
  message   String
  delivered Boolean  @default(false)
  createdAt DateTime @default(now())
  deliveredAt DateTime?
  @@index([driverId, delivered])
}
